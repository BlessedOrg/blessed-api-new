    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.16.1",
    "@types/lodash": "^4.17.12",
    "@usecapsule/core-sdk": "^2.3.2",
    "@usecapsule/ethers-v5-integration": "^2.3.2",
